---
import { ofertas } from '../scripts/ofertas.js';
---

<section id="ofertas" class="bg-font1 py-16 px-4 sm:px-6 lg:px-8 font-display">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-3xl font-bold text-center text-[var(--color-text1)] mb-10">
      Ofertas Especiales
    </h2>

<swiper-container
  slides-per-view="1"
  loop="true"
  pagination="true"
  navigation="true"
  autoplay-delay="3000"
  autoplay-disable-on-interaction="false"
  class="rounded-2xl shadow-xl max-w-3xl mx-auto"
  style="--swiper-pagination-color: white; --swiper-navigation-color: white;"
>
  {
    ofertas.map((oferta) => (
      <swiper-slide aria-label={`Oferta: ${oferta.titulo}`}>
        <article class="relative w-full h-[300px] sm:h-[400px] md:h-[450px] rounded-2xl overflow-hidden shadow-md">
          <!-- Imagen completa -->
          <img 
            src={oferta.imagen} 
            alt={`PromociÃ³n: ${oferta.titulo}`} 
            class="absolute inset-0 w-full h-full object-cover object-top"
            loading="lazy"
          />

          <!-- Fondo azul transparente -->
          <div class="absolute bottom-0 w-full h-[30%] bg-[rgba(0,94,184,0.4)] text-white p-3 sm:p-4 flex items-center backdrop-blur-sm">
            <div class="mx-auto max-w-xs sm:max-w-lg w-full text-center">
              <h3 class="text-sm sm:text-lg font-semibold leading-tight mb-1">{oferta.titulo}</h3>
              <p class="text-xs sm:text-sm leading-snug">{oferta.descripcion}</p>
            </div>
          </div>

          <!-- Borde decorativo -->
          <div class="absolute inset-0 rounded-2xl ring-1 ring-black/5"></div>
        </article>
      </swiper-slide>
    ))
  }
</swiper-container>


    
  </div>
</section>