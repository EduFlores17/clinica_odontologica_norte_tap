---
import { ofertas } from '../scripts/ofertas.js';
---

<section id="ofertas" class="bg-font1 py-16 px-4 sm:px-6 lg:px-8 font-display">
  <div class="max-w-5xl mx-auto">
    <h2 class="text-3xl font-bold text-center text-[var(--color-text1)] mb-10">
      Ofertas Especiales
    </h2>

    <swiper-container
      slides-per-view="1"
      loop="true"
      pagination="true"
      navigation="true"
      autoplay-delay="3000"
      autoplay-disable-on-interaction="false"
      class="rounded-xl shadow-xl"
      style="--swiper-pagination-color: white; --swiper-navigation-color: white;"
    >
      {
        ofertas.map((oferta) => (
          <swiper-slide aria-label={`Oferta: ${oferta.titulo}`}>
            <article class="flex flex-col h-full bg-white">
              <!-- Contenedor de imagen ajustado -->
              <div class="flex-1 flex items-center justify-center p-0">
                <img 
                  src={oferta.imagen} 
                  alt={`PromociÃ³n: ${oferta.titulo}`} 
                  class="w-full h-auto max-h-[75%] object-contain" 
                  loading="lazy"
                />
              </div>
              <!-- Marco azul con altura fija -->
              <div class="bg-font2 text-white p-4 sm:p-6 text-center w-full min-h-[140px] flex items-center">
                <div class="mx-auto max-w-md w-full">
                  <h3 class="text-lg sm:text-xl font-semibold mb-2">{oferta.titulo}</h3>
                  <p class="text-sm sm:text-base">{oferta.descripcion}</p>
                </div>
              </div>
            </article>
          </swiper-slide>
        ))
      }
    </swiper-container>
  </div>
</section>