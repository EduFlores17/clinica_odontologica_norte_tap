<header class="bg-font1 shadow-md sticky top-0 z-50 py-3 md:py-4">
  <!-- Contenedor alineado con el hero (max-w-6xl) -->
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <!-- Logo centrado verticalmente -->
    <a href="/" class="flex items-center gap-3">
      <img 
        src="Clinica1.png" 
        alt="Clínica Odontológica Norte" 
        class="h-12 w-auto md:h-14 ml-7" 
      />
    </a>

    <!-- Menú Desktop - Centrado horizontalmente -->
    <div class="hidden md:flex items-center justify-center gap-6 lg:gap-8 font-display mx-auto">
      <a href="#servicios" class="text-gray-700 hover:text-font2 transition-colors duration-200 px-2 py-1">Servicios</a>
      <a href="#ofertas" class="text-gray-700 hover:text-font2 transition-colors duration-200 px-2 py-1">Ofertas</a>
      <a href="#nosotros" class="text-gray-700 hover:text-font2 transition-colors duration-200 px-2 py-1">Nosotros</a>
      <a href="#opiniones" class="text-gray-700 hover:text-font2 transition-colors duration-200 px-2 py-1">Opiniones</a>
    </div>

    <!-- Botón CTA alineado a la derecha -->
    <div class="hidden md:block">
      <a href="#contacto" class="bg-font2 text-white px-5 py-2.5 rounded-full hover:bg-gray-700 transition-colors duration-200 text-nowrap">
        Contáctanos
      </a>
    </div>

    <!-- Botón Hamburguesa (Mobile) -->
    <button id="menu-toggle" class="md:hidden text-gray-700 focus:outline-none" aria-label="Menú">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>

  <!-- Menú Mobile - Mismo ancho que el contenedor -->
  <div id="mobile-menu" class="hidden md:hidden bg-white shadow-lg">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-3">
      <a href="#servicios" class="block py-3 px-3 text-gray-700 hover:text-font2 hover:bg-gray-50 rounded-lg transition-colors">Servicios</a>
      <a href="#ofertas" class="block py-3 px-3 text-gray-700 hover:text-font2 hover:bg-gray-50 rounded-lg transition-colors">Ofertas</a>
      <a href="#nosotros" class="block py-3 px-3 text-gray-700 hover:text-font2 hover:bg-gray-50 rounded-lg transition-colors">Nosotros</a>
      <a href="#opiniones" class="block py-3 px-3 text-gray-700 hover:text-font2 hover:bg-gray-50 rounded-lg transition-colors">Opiniones</a>
      <a href="#contacto" class="block mt-3 bg-font2 text-white px-4 py-3 rounded-full text-center hover:bg-gray-700 transition-colors">
        Contáctanos
      </a>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const menuButton = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (menuButton && mobileMenu) {
      menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        // Animación del ícono
        const icon = menuButton.querySelector('svg');
        if (icon) {
          const isHidden = mobileMenu.classList.contains('hidden');
          icon.innerHTML = isHidden 
            ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>'
            : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>';
        }
      });
    }
  });
</script>