<header class="bg-font1 shadow-md sticky top-0 z-50 py-3 md:py-4">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <!-- Logo optimizado con <picture> -->
    <a href="/" class="flex items-center gap-3 shrink-0" aria-label="Inicio">
      <picture>
        <source srcset="/Clinica1.webp" type="image/webp" />
        <img
          src="/Clinica1.png"
          alt="Clínica Odontológica Norte, dentista en Tapachula"
          class="h-10 sm:h-12 md:h-14 w-auto"
          width="56"
          height="56"
          loading="lazy"
        />
      </picture>
    </a>

    <!-- Menú Desktop -->
    <nav class="hidden md:flex items-center justify-center gap-6 lg:gap-8 font-display mx-auto" aria-label="Navegación principal">
      <a href="/#servicios" class="text-text1 hover:text-font2 transition-colors duration-200 px-2 py-1 font-medium">Servicios</a>
      <a href="/#ofertas" class="text-text1 hover:text-font2 transition-colors duration-200 px-2 py-1 font-medium">Ofertas</a>
      <a href="/#nosotros" class="text-text1 hover:text-font2 transition-colors duration-200 px-2 py-1 font-medium">Nosotros</a>
      <a href="/#galeria" class="text-text1 hover:text-font2 transition-colors duration-200 px-2 py-1 font-medium">Galería</a>
      <a href="/#opiniones" class="text-text1 hover:text-font2 transition-colors duration-200 px-2 py-1 font-medium">Opiniones</a>
    </nav>

    <!-- Botón CTA Desktop -->
    <div class="hidden md:block">
      <a href="/#contacto" class="bg-font2 hover:bg-hover2 text-text-light px-5 py-2.5 rounded-full transition-colors duration-200 font-medium">
        Contáctanos
      </a>
    </div>

    <!-- Botón Hamburguesa Mobile -->
    <button id="menu-toggle" class="md:hidden text-text3 px-2 focus:outline-none" aria-label="Abrir menú" aria-expanded="false">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>

  <!-- Menú Mobile -->
  <nav id="mobile-menu" class="hidden md:hidden bg-white shadow-lg" aria-label="Navegación móvil">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-3">
      <a href="/#servicios" class="block py-3 px-3 text-text3 hover:text-font2 hover:bg-gray-50 rounded-lg transition-colors font-medium">Servicios</a>
      <a href="/#ofertas" class="block py-3 px-3 text-text3 hover:text-font2 hover:bg-gray-50 rounded-lg transition-colors font-medium">Ofertas</a>
      <a href="/#nosotros" class="block py-3 px-3 text-text3 hover:text-font2 hover:bg-gray-50 rounded-lg transition-colors font-medium">Nosotros</a>
      <a href="/#galeria" class="block py-3 px-3 text-text3 hover:text-font2 hover:bg-gray-50 rounded-lg transition-colors font-medium">Galería</a>
      <a href="/#opiniones" class="block py-3 px-3 text-text3 hover:text-font2 hover:bg-gray-50 rounded-lg transition-colors font-medium">Opiniones</a>
      <a href="/#contacto" class="block mt-3 bg-font2 hover:bg-hover2 text-text-light px-4 py-3 rounded-full text-center transition-colors font-medium">
        Contáctanos
      </a>
    </div>
  </nav>
</header>


<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuButton = document.getElementById("menu-toggle") as HTMLButtonElement | null;
    const mobileMenu = document.getElementById("mobile-menu") as HTMLElement | null;
    const header = document.querySelector("header") as HTMLElement | null;

    if (!menuButton || !mobileMenu || !header) return;

    const toggleIcon = (expanded: boolean) => {
      const icon = menuButton.querySelector("svg");
      if (!icon) return;
      icon.innerHTML = expanded
        ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>'
        : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>';
    };

    menuButton.addEventListener("click", () => {
      const isHidden = mobileMenu.classList.toggle("hidden");
      menuButton.setAttribute("aria-expanded", isHidden ? "false" : "true");
      toggleIcon(!isHidden);
    });

    const anchorLinks = document.querySelectorAll('a[href^="/#"]');
    anchorLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        const href = link.getAttribute("href");
        if (!href) return;
        const targetId = href.replace("/#", "#");
        const target = document.querySelector(targetId);
        if (!target) return;

        e.preventDefault();
        const offset = target.getBoundingClientRect().top + window.scrollY - header.offsetHeight;
        window.scrollTo({ top: offset, behavior: "smooth" });

        // Cierra menú móvil si está abierto
        if (!mobileMenu.classList.contains("hidden")) {
          mobileMenu.classList.add("hidden");
          menuButton.setAttribute("aria-expanded", "false");
          toggleIcon(false);
        }
      });
    });
  });
</script>
