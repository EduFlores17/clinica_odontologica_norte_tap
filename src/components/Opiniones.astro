---
// Asegúrate de que las opiniones están siendo importadas correctamente
import { opiniones } from '../scripts/opiniones.js';
---

<section id="opiniones" class="bg-font4 py-20 px-4 sm:px-6">
  <div class="mx-auto max-w-5xl">
    <!-- Encabezado mejorado -->
    <div class="mb-16 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-[#080A0C] mb-4 font-display">
        Opiniones
      </h2>
      <div class="mx-auto mt-4 max-w-3xl">
        <p class="text-lg text-text2 font-display">
          La satisfacción de nuestros pacientes es nuestra mejor carta de presentación
        </p>
      </div>
    </div>

    <!-- Grid de testimonios -->
    <div class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 font-display">
      {opiniones.map((opinion) => (
        <div class="group relative overflow-hidden rounded-xl bg-white p-6 sm:p-8 shadow-lg shadow-blue-100/50 transition-all hover:shadow-xl hover:shadow-blue-200/50">
          <div class="relative z-10">
            <div class="mb-6 flex items-center gap-4">
              <img 
                src={opinion.imagen} 
                alt={`Foto de ${opinion.nombre}`} 
                class="h-14 w-14 rounded-full object-cover shadow-md"
                loading="lazy"
                width="56"
                height="56"
              />
              <div>
                <p class="font-bold text-text1">{opinion.nombre}</p>
                <p class="text-sm text-font2">{opinion.tratamiento}</p>
                <div class="mt-1 flex text-yellow-400" aria-label={`Calificación de ${opinion.nombre}`}>
                  {'★'.repeat(opinion.calificacion)}{'☆'.repeat(5 - opinion.calificacion)}
                </div>
              </div>
            </div>
            <blockquote class="text-gray-700">
              <p class="relative before:absolute before:-left-6 before:top-0 before:text-4xl before:font-serif before:text-blue-200 before:content-['\\201C']">
                {opinion.texto}
              </p>
            </blockquote>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
