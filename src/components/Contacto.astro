              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="module">
  function enviarWhatsApp() {
    try {
      const nombreInput = document.getElementById('nombre');
      const emailInput = document.getElementById('email');
      const telefonoInput = document.getElementById('telefono');
      const mensajeInput = document.getElementById('mensaje');

      if (
        !(nombreInput instanceof HTMLInputElement) ||
        !(emailInput instanceof HTMLInputElement) ||
        !(telefonoInput instanceof HTMLInputElement) ||
        !(mensajeInput instanceof HTMLTextAreaElement)
      ) {
        alert('No se pudieron obtener los elementos del formulario correctamente');
        return;
      }

      const nombre = nombreInput.value.trim();
      const email = emailInput.value.trim();
      const telefono = telefonoInput.value.trim();
      const mensaje = mensajeInput.value.trim();

      if (!nombre || !email || !telefono || !mensaje) {
        alert('Por favor completa todos los campos requeridos');
        return;
      }

      if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        alert('Por favor ingresa un correo electrónico válido');
        return;
      }

      const texto = `Hola, soy *${encodeURIComponent(nombre)}* y quisiera información sobre sus servicios.%0A%0A*Mis datos:*%0A📧 Email: ${encodeURIComponent(email)}%0A📞 Teléfono: ${encodeURIComponent(telefono)}%0A%0A*Mensaje:*%0A${encodeURIComponent(mensaje)}`;

      const numeroWhatsApp = '+5219622152670';
      window.open(`https://wa.me/${numeroWhatsApp}?text=${texto}`, '_blank');
    } catch (error) {
      console.error('Error al enviar el mensaje:', error);
      alert('Ocurrió un error al intentar enviar el mensaje. Por favor inténtalo de nuevo.');
    }
  }

  window.enviarWhatsApp = enviarWhatsApp;
</script>
