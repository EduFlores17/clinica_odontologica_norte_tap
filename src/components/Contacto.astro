<!-- Sección Contacto - Diseño Exacto -->
<section id="contacto" class="bg-font4 py-16 px-4 sm:px-6 lg:px-8 font-display" aria-labelledby="contacto-header">
  <div class="max-w-4xl mx-auto">
    <!-- Encabezado -->
    <header class="text-center mb-12">
      <h2 id="contacto-header" class="text-3xl font-bold text-[var(--color-text1)] font-[var(--font-display)] mb-4">Contacto</h2>
      <p class="text-[var(--color-text2)] font-[var(--font-body)]">
        Estamos aquí para responder tus preguntas y ayudarte a programar tu cita.
      </p>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Formulario -->
      <div class="space-y-6 rounded-xl bg-white p-5" aria-labelledby="formulario">
        <h3 id="formulario" class="sr-only">Formulario de Contacto</h3>
        <div>
          <label for="nombre" class="block text-sm font-semibold text-[var(--color-text1)] mb-2">Nombre completo</label>
          <input 
            id="nombre"
            type="text" 
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[var(--color-font2)] focus:ring-2 focus:ring-[var(--color-font1)]/50"
            placeholder="Tu nombre"
            required
            aria-required="true"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-semibold text-[var(--color-text1)] mb-2">Correo Electrónico</label>
          <input 
            id="email"
            type="email" 
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[var(--color-font2)] focus:ring-2 focus:ring-[var(--color-font1)]/50"
            placeholder="Tu correo electrónico"
            required
            aria-required="true"
            aria-invalid="false"
            pattern="^[^\s@]+@[^\s@]+\.[^\s@]+$"
          />
        </div>

        <div>
          <label for="servicio" class="block text-sm font-semibold text-[var(--color-text1)] mb-2">Servicio de interés</label>
          <select id="servicio" class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[var(--color-font2)] focus:ring-2 focus:ring-[var(--color-font1)]/50" required aria-required="true">
            <option value="">Selecciona un servicio</option>
            <option>Blanqueamiento dental</option>
            <option>Ortodoncia</option>
            <option>Implantes dentales</option>
            <option>Limpieza dental</option>
          </select>
        </div>

        <div>
          <label for="mensaje" class="block text-sm font-semibold text-[var(--color-text1)] mb-2">Mensaje</label>
          <textarea 
            id="mensaje"
            rows="4"
            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-[var(--color-font2)] focus:ring-2 focus:ring-[var(--color-font1)]/50"
            placeholder="¿Cómo podemos ayudarte?"
            required
            aria-required="true"
          ></textarea>
        </div>

        <button onclick="enviarWhatsApp()" class="w-full bg-[var(--color-font2)] text-white font-semibold py-3 px-6 rounded-lg hover:bg-[var(--color-hover2)] transition-colors" aria-label="Enviar mensaje por WhatsApp">
          Enviar mensaje
        </button>
      </div>

      <!-- Información de contacto -->
      <div class="space-y-6 rounded-xl bg-white p-5" aria-labelledby="info-contacto">
        <h3 id="info-contacto" class="sr-only">Información de contacto</h3>
        
        <div class="flex items-start gap-4">
          <div class="w-5 h-5 mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="text-[var(--color-font2)]">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-[var(--color-text1)]">Dirección</h4>
            <p class="text-[var(--color-text2)]">Avenida oral B. Colonia 5 de febrero.<br>Tapachula, Chiapas</p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="w-5 h-5 mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="text-[var(--color-font2)]">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-[var(--color-text1)]">Teléfono</h4>
            <p class="text-[var(--color-text2)]">+52 962 220 2022</p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="w-5 h-5 mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="text-[var(--color-font2)]">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-[var(--color-text1)]">Email</h4>
            <p class="text-[var(--color-text2)]">fedu17i@gmail.com</p>
          </div>
        </div>

        <div class="flex items-start gap-4">
          <div class="w-5 h-5 mt-1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="text-[var(--color-font2)]">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <h4 class="font-semibold text-[var(--color-text1)]">Horario de atención</h4>
            <p class="text-[var(--color-text2)]">Lunes a sábado de 10 a 17 hrs</p>
          </div>
        </div>

        <!-- Redes Sociales -->
        <div class="pt-4">
          <h4 class="font-semibold text-[var(--color-text1)] mb-2">Síguenos:</h4>
          <div class="flex gap-4">
            <a href="#" class="text-[var(--color-font2)] hover:text-[var(--color-hover2)]">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script type="module">
  function enviarWhatsApp() {
    try {
      const nombre = document.getElementById('nombre')?.value.trim();
      const email = document.getElementById('email')?.value.trim();
      const servicio = document.getElementById('servicio')?.value.trim();
      const mensaje = document.getElementById('mensaje')?.value.trim();

      if (!nombre || !email || !mensaje || servicio === 'Selecciona un servicio') {
        alert('Por favor completa todos los campos requeridos.');
        return;
      }

      if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        alert('Por favor ingresa un correo electrónico válido.');
        return;
      }

      const texto = `Hola, soy *${encodeURIComponent(nombre)}* y quisiera información sobre el servicio de *${encodeURIComponent(servicio)}*.
%0A%0A*Mis datos:*%0A📧 Email: ${encodeURIComponent(email)}%0A*Mensaje:*%0A${encodeURIComponent(mensaje)}`;

      const numeroWhatsApp = '+5219622152670';
      window.open(`https://wa.me/${numeroWhatsApp}?text=${texto}`, '_blank');
    } catch (error) {
      console.error('Error al enviar el mensaje:', error);
      alert('Ocurrió un error al intentar enviar el mensaje. Por favor, inténtalo de nuevo.');
    }
  }

  window.enviarWhatsApp = enviarWhatsApp;
</script>
