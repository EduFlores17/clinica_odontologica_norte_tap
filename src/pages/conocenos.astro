---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <Header />

  <main class="px-4 py-20 space-y-20 font-display">
<section class="max-w-6xl mx-auto text-center">
  <h2 class="text-3xl font-bold text-font2 mb-10">Nuestro equipo médico</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Doctor 1 -->
    <div class="bg-white rounded-xl shadow-md p-6 text-left">
      <img src="/doctor1.jpg" alt="Doctor 1" class="w-full h-56 object-cover rounded-lg mb-4" />
      <h3 class="text-xl font-bold text-font2 mb-1">Dra. Mariana Torres</h3>
      <p class="text-sm text-gray-700 mb-1">Especialista en ortodoncia</p>
      <p class="text-sm text-gray-500">Cédula: 12345678</p>
    </div>

    <!-- Repite los siguientes 5 bloques cambiando nombre, imagen y datos -->
    <div class="bg-white rounded-xl shadow-md p-6 text-left">
      <img src="/doctor2.jpg" alt="Doctor 2" class="w-full h-56 object-cover rounded-lg mb-4" />
      <h3 class="text-xl font-bold text-font2 mb-1">Dr. Luis Gómez</h3>
      <p class="text-sm text-gray-700 mb-1">Implantología dental</p>
      <p class="text-sm text-gray-500">Cédula: 87654321</p>
    </div>

    <!-- ...otros doctores aquí... -->
  </div>
</section>


    <!-- Video de instalaciones -->
    <section class="max-w-5xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-font2 mb-6">Nuestras instalaciones</h2>
      <div class="aspect-[9/16] mx-auto max-w-sm rounded-xl overflow-hidden shadow-lg bg-black">
        <video src="/video-instalaciones.mp4" controls class="w-full h-full object-cover"></video>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
