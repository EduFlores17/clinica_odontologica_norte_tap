---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Layout from "../layouts/Layout.astro";
import { doctores } from "../scripts/doctores.js";
---

<Layout>
  <Header />

  <main class="px-4 py-20 space-y-20 font-display">
  <!-- Sección combinada: galería + video -->
  <section class="max-w-5xl mx-auto">
    <h2 class="text-3xl font-bold text-font2 text-center mb-10">Nuestro equipo médico e instalaciones</h2>

    <div class="flex flex-col lg:flex-row gap-10 items-start">
      <!-- Galería de doctores -->
      <div class="w-full lg:w-2/3 grid grid-cols-1 sm:grid-cols-2 gap-6">
        {
          doctores.map((doctor) => (
            <div class="bg-white rounded-xl shadow-md p-6 text-left">
              <img src={doctor.imagen} alt={doctor.nombre} class="w-full h-56 object-cover object-top rounded-lg mb-4" />
              <h3 class="text-xl font-bold text-font2 mb-1">{doctor.nombre}</h3>
              <p class="text-sm text-gray-700 mb-1">{doctor.especialidad}</p>
              <p class="text-sm text-gray-500">Cédula: {doctor.cedula}</p>
            </div>
          ))
        }
      </div>

      <!-- Video de instalaciones -->
      <div class="w-full lg:w-1/3 flex justify-center">
        <div class="aspect-[9/16] w-full max-w-sm rounded-xl overflow-hidden shadow-lg bg-black">
          <video src="/clinica.mp4" controls class="w-full h-full object-cover"></video>
        </div>
      </div>
    </div>
  </section>
</main>


  <Footer />
</Layout>
